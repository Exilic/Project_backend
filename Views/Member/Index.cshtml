@model CreatePostViewModel

@{
    ViewData["Title"] = "My page";
}

<div class="text-center">
    <h1 class="display-4">Write a post</h1>
    <p>Write a title and a text.</p>
    <div class="col-sm">
        <form asp-controller="Member" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text"></label>
                <textarea asp-for="Text" rows="12" cols="50">Text</textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div class="form-group">
                <input type="radio" asp-for="Status" value="Draft" />
                <input type="radio" asp-for="Status" value="Publish" />
            </div>
            <input class="text-danger" type="submit" value="Save" />
        </form>
        </div>
    </div>
